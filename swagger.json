    "basePath": "/",
    "tags": [
      {
        "name": "tasks",
        "description": "list all of your tasks"
      }
    ],
    "schemes": [
      "http"
    ],
    "paths": {
      "/books": {
        "get": {
          "tags": [
            "tasks"
          ],
          "summary": "Get a list of all your tasks",
          "description": "Returns a list of all your tasks",
          "operationId": "gettaks",
          "produces": [
            "application/json"
          ],
          "parameters": [],
          "responses": {
            "200": {
              "description": "successful operation",
              "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/task"
                  }
              }
            },
            "500": {
              "description": "Server error"
            }
          }
        },
        "post": {
          "tags": [
            "task"
          ],
          "summary": "Add a new task to the database",
          "description": "",
          "operationId": "createTask",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Task that needs to be added to your list",
              "required": true,
              "schema": {
                "$ref": "#/definitions/task"
              }
            }
          ],
          "responses": {
            "405": {
              "description": "Invalid input"
            }
          }
        }
      },
      "/books/{bookId}": {
        "get": {
          "tags": [
            "task"
          ],
          "summary": "Find task by ID",
          "description": "Returns a single task",
          "operationId": "getTaskById",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "taskId",
              "in": "path",
              "description": "ID of task to return",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "successful operation",
              "schema": {
                "$ref": "#/definitions/Book"
              }
            },
            "400": {
              "description": "Invalid ID supplied"
            },
            "404": {
              "description": "Book not found"
            }
          }
        }
      }
    },
    "externalDocs": {
